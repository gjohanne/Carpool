#:import gch kivy.utils.get_color_from_hex

WindowManager:
	Login:
	Home:
	CardPage:

<Login>:
	name: "login"

	MDCard:
		size_hint: None, None
		size: 300, 400
		pos_hint: {"center_x": 0.5, "center_y": 0.5}
		elevation: 10
		padding: 25
		spacing: 25
		orientation: 'vertical'

		MDLabel:
			id: welcome_label
			text: "WELCOME"
			font_size: 40
			halign: 'center'
			size_hint_y: None
			height: self.texture_size[1]
			padding_y: 15

		MDTextFieldRound:
			id: user
			hint_text: "username"
			icon_right: "account"
			size_hint_x: None
			width: 200
			font_size: 18
			pos_hint: {"center_x": 0.5}

		MDTextFieldRound:
			id: password
			hint_text: "password"
			icon_right: "eye-off"
			size_hint_x: None
			width: 200
			font_size: 18
			pos_hint: {"center_x": 0.5}
			password: True

		MDRoundFlatButton:
			text: "LOG IN"
			font_size: 12
			pos_hint: {"center_x": 0.5}
			on_press: app.logger()

		MDRoundFlatButton:
			text: "CLEAR"
			font_size: 12
			pos_hint: {"center_x": 0.5}
			on_press: app.clear()

		MDRoundFlatButton:
			text: "Test_Login"
			font_size: 12
			pos_hint: {"center_x": 0.5}
			on_release: 
				app.root.current = "home"
				root.manager.transition.direction = "left"

		Widget:
			size_hint_y: None
			height: 10
				

		
<Home>:
	name: "home"

	MDBoxLayout:
		orientation: 'vertical'

		MDToolbar:
			title: 'Home Profile Page'
			md_bg_color: gch('#056e17')
			Image:
				source: "Carpool_Logo.png"
				#size_hint_y: None

		MDBoxLayout:

			MDNavigationRail:
				id: rail
				use_resizeable: True
    			use_title: True
				icon_title: "Carpool_Logo.png"
    			text_title: "[b][color=#ffffff]Menu[/color][/b]"

				md_bg_color: gch('#056e17')
				color_normal: gch('#1703fc')
				color_active: gch('#c4af0c')
				use_hover_behavior: True
    			hover_bg: 0, 0, 0, .2
				

				MDNavigationRailItem:
					icon: 'Carpool_Logo.png'
					size_hint: None, None
					text: 'Home'
					
									
				MDNavigationRailItem:
					icon: ''
					text: 'Profile'

				MDNavigationRailItem:
					icon: ''
					text: 'Make Ride'

				MDNavigationRailItem:
					icon: ''
					text: 'My Ride'

				
			MDBoxLayout:
				padding: '24dp'

				ScrollView:

					MDList:
						id: box
						cols: 3
						spacing: '12dp'
						
		 

		MDRoundFlatButton:
			text: "Back to Login"
			font_size: 12
			pos_hint: {"center_x": 0.1}
			height: 10
			on_release: 
				app.root.current = "login"
				root.manager.transition.direction = "right"

		MDRoundFlatButton:
			text: "Other"
			font_size: 12
			pos_hint: {"center_x": 0.5}
			height: 10
			on_release: 
				app.root.current = "Card Page"
				root.manager.transition.direction = "left"


<CardPage>
	name: "Card Page"

	
	MDCard:
		size_hint: None, None
		size: 300, 400
		pos_hint: {"center_x": 0.5, "center_y": 0.5}
		elevation: 10
		padding: 25
		spacing: 25
		orientation: 'vertical'

		MDLabel:
			id: CP_label
			text: "Card Info"
			font_size: 40
			halign: 'center'
			size_hint_y: None
			height: self.texture_size[1]
			padding_y: 15

		MDRoundFlatButton:
			text: "Back to Login"
			font_size: 12
			pos_hint: {"center_x": 0.1}
			height: 10
			on_release: 
				app.root.current = "login"
				root.manager.transition.direction = "down"

		MDRoundFlatButton:
			text: "Back to Home"
			font_size: 12
			pos_hint: {"center_x": 0.1}
			height: 10
			on_release: 
				app.root.current = "home"
				root.manager.transition.direction = "up"
